<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="google" type="host">https://www.google.com/recaptcha/</value>
                <value id="recap-assets" type="host">https://www.gstatic.com/recaptcha/</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="recap-frame" type="host">https://www.google.com/recaptcha/</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
